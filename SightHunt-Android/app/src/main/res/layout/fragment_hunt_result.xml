<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutSuccess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/hunt_result_margin"
            android:layout_marginRight="@dimen/hunt_result_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewSuccess"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:textSize="@dimen/hunt_result_text_size"
                android:layout_weight="1"
                android:text="@string/text_success"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/success"/>


            <TextView
                android:id="@+id/textViewVote"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:textSize="@dimen/hunt_result_text_size"
                android:layout_weight="1"
                android:text="@string/text_vote"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_medium"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonUpVote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/button_upvote"/>

            <Button
                android:id="@+id/buttonDownVote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/button_downvote"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFailed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/hunt_result_margin"
            android:layout_marginRight="@dimen/hunt_result_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewFailed"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:textSize="@dimen/hunt_result_text_size"
                android:layout_weight="1"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fail"/>


            <TextView
                android:id="@+id/textViewTryAgain"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/hunt_result_text_size"
                android:layout_weight="1"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_medium"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonTryAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/button_try_again"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>